{
  "manifest_version": 3,
  "name": "Pealim dict extension",
  "version": "1.0.0",
  "description": "Pealim helper",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Pealim helper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.pealim.com/*"
      ],
      "js": [
        "./src/content.ts"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}