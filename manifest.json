{
  "manifest_version": 3,
  "name": "Pealim dict extension",
  "version": "1.0.0",
  "description": "A simple Vue app as a Chrome extension",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./src/content.ts"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}